@model Siam.IdentityServer.Quickstart.Home.ErrorViewModel

@{
    var error = Model != null ? Model.Error != null ? Model.Error.Error : null : null;
    var errorDescription = Model != null ? Model.Error != null ? Model.Error.ErrorDescription : null : null;
    var requestId = Model != null ? Model.Error != null ? Model.Error.RequestId : null : null;
}

<div class="error-page">
    <div class="lead">
        <h1>Error</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-danger">
                Sorry, there was an error

                @if (error != null)
                {
                    <strong>
                        <em>
                            : @error
                        </em>
                    </strong>

                    if (errorDescription != null)
                    {
                        <div>@errorDescription</div>
                    }
                }
            </div>

            @if (requestId != null)
            {
                <div class="request-id">Request Id: @requestId</div>
            }
        </div>
    </div>
</div>
